function setupAuthMask() {
    for (var i = 1; i < 2097152; i *= 2) {
        var flag = (userPermissions & i);
        var objClassShow = ".auth_{0}:not(.tabarea, .subtabcontainer, #tab_status.button)".format(i);
        var objClassHide = ".auth_{0}".format(i);

        if (flag == 0) {
            $(objClassHide).hide();
        } else {
            $(objClassShow).show();   
        }
    }
}

