}

function endTask(taskId)
{
    var eId = "#task_" + taskId;

    if ($(eId).length == 1)
    {
        if ($("#tasksarea .task").length == 1)
        {
            $("#tasksarea").hide('drop', { direction: 'left' }, function () {
                $(eId).remove();
                updateNoticeTitles();
            });
        }
        else {
            $(eId).hide('drop', { direction: 'left' }, function() {
                $(eId).remove();
                updateNoticeTitles();
            });
        }
    }
}

